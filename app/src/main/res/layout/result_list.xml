<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btnMarY"
            android:gravity="center"
            android:text="@string/item_name"
            android:textSize="@dimen/textSizeL" />

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btnMarY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/listViewMarX"
            android:layout_marginEnd="@dimen/listViewMarX"
            android:layout_marginBottom="@dimen/listViewMarY"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceCol"
                android:layout_width="@dimen/textViewSize"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btnMarY"
                android:layout_marginEnd="@dimen/listViewMarX"
                android:layout_weight="1"
                android:text="@string/col_price"
                android:textSize="@dimen/textSizeM" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/empty_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/listViewMarX"
            android:layout_marginEnd="@dimen/listViewMarX"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateCol"
                android:layout_width="@dimen/textViewSize"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btnMarY"
                android:layout_marginEnd="@dimen/listViewMarY"
                android:layout_weight="1"
                android:text="@string/col_date"
                android:textSize="@dimen/textSizeM" />

            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/empty_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>